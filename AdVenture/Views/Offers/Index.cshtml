<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.investorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ventureID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bidStake)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createdOn)
        </th>
